{
  "name": "conan-pkg-step2",
  "displayName": "conan-pkg-step2",
  "description": "Conan package as a tree view",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "project-manager2",
          "title": "MyOffice extension",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "views": {
      "project-manager2": [
        {
          "id": "mo.projectDeps",
          "name": "MyOffice Package Explorer",
          "contextualTitle": "MyOffice Package Explorer"
        },
        {
          "id": "mo.manageProjectSettings",
          "type": "webview",
          "initialSize": 390,
          "name": "Project config"
        },
        {
          "id": "mo.sysInfo",
          "type": "webview",
          "initialSize": 390,
          "name": "System Info"
        }
      ]
    },
    "commands": [
      {
        "command": "conan-pkg.version",
        "title": "conan-version"
      },
      {
        "command": "mgt.conanUpdate",
        "icon": "$(sync)",
        "title": "conan update"
      },
      {
        "command": "mgt.conanInspect",
        "icon": "$(inspect)",
        "title": "conan inspect"
      },
      {
        "command": "conan-pkg.conanInfo",
        "icon": "$(info)",
        "title": "package-info"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mgt.conanUpdate",
          "when": "view == mo.manageProjectSettings || view == mgt.manageProject",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "conan-pkg.conanInfo",
          "when": "view == mo.projectDeps && viewItem == package",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}